<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.bgregos.blackjacksolver.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.bgregos.blackjacksolver.MainActivity"
        tools:showIn="@layout/activity_main"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="User"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="25sp"
                android:textColor="@color/cardview_light_background"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="1sp"
                android:id="@+id/textView3"
                android:foreground="@color/common_google_signin_btn_text_dark_focused" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:background="@color/cardview_dark_background">

                <TableLayout
                    android:layout_width="match_parent"
                    android:id="@+id/usertable"
                    android:layout_height="wrap_content">
                </TableLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="3sp"
                    android:id="@+id/textView2"
                    android:foreground="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:text="Dealer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/textView5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/cardview_light_background"
                    android:background="@color/cardview_dark_background"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:textSize="1sp"
                    android:foreground="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_weight="0.30">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dealertable">
                    </TableLayout>
                </ScrollView>

                <TextView
                    android:text="Test"
                    android:layout_width="320dp"
                    android:layout_height="0dp"
                    android:id="@+id/dispText"
                    android:layout_weight="1.01"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_thumbs_up_down_black_24dp"
        app:backgroundTint="@android:color/holo_red_dark"
        app:layout_anchor="@+id/content_main"
        app:layout_anchorGravity="bottom|right"
        android:layout_gravity="top|left"
        android:tint="@android:color/white" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/dfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add_black_24dp"
        app:backgroundTint="@android:color/holo_green_light"
        app:layout_anchorGravity="center_vertical|right"
        android:layout_gravity="center_vertical|left"
        app:layout_anchor="@+id/content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add_black_24dp"
        app:backgroundTint="@android:color/holo_green_light"
        app:layout_anchorGravity="top|right"
        android:layout_gravity="bottom|left"
        app:layout_anchor="@+id/content_main"
        android:layout_marginTop="5dp" />

</android.support.design.widget.CoordinatorLayout>
